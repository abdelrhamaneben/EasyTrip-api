    <!-- Custom JS code to bind to Autocomplete API -->
    <script type="text/javascript" src="js/autocomplete.js"></script>
    <script>


            $('#signIn').click(function (){
              var txt = $('#signIn').text();
              if( txt == 'Sign in'){
                BootstrapDialog.show({
                  title: 'Sign In',
                  message: $(' <label>E-mail</label><input type="text" id="username"/> <label>Password</label><input type="password" id="password"/>'),
                  buttons: [{
                    cssClass: 'btn-primary',
                    label: 'Sign in',
                    action: function(dialog) {
                        var username = document.getElementById("username").value;
                        var password = document.getElementById("password").value;
                        signIn(username,password);
                        dialog.close()
                    }
                },
                {
                  cssClass: 'btn-primary',
                  label: 'Sign up',
                  action: function(dialog) {
                      dialog.close();
                      signUp();
                  }
                }]
              });
            }
            else if( txt == 'Log out'){
              logout();
            }
            });
            function signUp(){
              BootstrapDialog.show({
                  title: 'Sign Up',
                  message: $(' <label>First name</label><input type="text" id="firstName"/> <label>Last name</label><input type="text" id="lastName"/> <br> <label>E-mail</label><input type="text" id="mail"/> <label>Password</label><input type="password" id="password"/>'),
                  buttons: [{
                    cssClass: 'btn-primary',
                    label: 'Save',
                    action: function(dialog) {
                        var firstName = document.getElementById("firstName").value;
                        var lastName = document.getElementById("lastName").value;
                        var mail = document.getElementById("mail").value;
                        var password = document.getElementById("password").value;
                        saveSignUp(firstName,lastName,mail,password);
                        dialog.close()
                    }
                }]
              });
            }

            function logout(){
                data = {};
                $.post( "/user/logout/", data).done(function (data){
                  $('#signIn').text('Sign in');
                  console.log('logged OUT!!!');
                });
            }

            function signIn(username,pass){
                data = { email: username, password: pass };
                console.log(data);
                $.post( "/user/login/", data).success(function (data){
                  $('#signIn').text('Log out');
                  console.log('logged in!!!');
                }).error(function (data){
                  BootstrapDialog.show({
                      title: 'Error',
                      message: 'Username and/or password is not valid!'
                });
              });
            }

            function saveSignUp(firstName,lastName,mail,pass){
              data = { name_first: firstName, name_last: lastName, email: mail, password: pass, role: 'private' };
              console.log(data);
              $.post( "/user/signup/", data).done(function (data){
                console.log(data);
                console.log('Sign UP!!!');
              });
           }
    </script>
</html>
